{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
   "lib": ["es2015"],
  "include": [
    "src/**/*"
  ]
}
